## -*- coding: utf-8 -*-
<%namespace name="helper" file="index_helper.tmpl"/>
<%namespace name="comments" file="comments_helper.tmpl"/>
<%inherit file="base.tmpl"/>
<%block name="content">
    % for post in posts:
        <article class="postbox h-entry post-${post.meta('type')}">
        <h1 class="p-name entry-title"><a href="${post.permalink()}" class="u-url">${post.title()}</h1></a>
        <div class="metadata">
        <p class="dateline">${messages("Published on")} <time class="published dt-published" datetime="${post.date.isoformat()}">${post.formatted_date(date_format)}</time></p>
        % if not post.meta('nocomments'):
            ${comments.comment_link(post.permalink(), post._base_path)}
        % endif
        </div>
        %if index_teasers:
        <div class="p-summary entry-summary">
        ${post.text(teaser_only=True)}
        %else:
        <div class="e-content entry-content">
        ${post.text(teaser_only=False)}
        %endif
        </div>
        </article>
    % endfor
    ${helper.html_pager()}
    ${comments.comment_link_script()}
	${helper.mathjax_script(posts)}
</%block>
