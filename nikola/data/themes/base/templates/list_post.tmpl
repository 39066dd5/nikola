## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>
<%block name="content">
        <article class="postbox">
        <h1>${title}</h1>
        %if posts:
        <ul class="postlist">
        % for post in posts:
            <li><a href="${post.permalink()}" class="listtitle">${post.title()}</a> <time class="listdate" datetime="${post.date.isoformat()}">${post.formatted_date(date_format)}</time></li>
        % endfor
        </ul>
        %endif
        </article>
</%block>
