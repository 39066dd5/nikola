{% extends "base.tmpl" %}
{% block content %}
    <div class="reveal"><div class="slides">
    <section>
        <!--Body content-->
        <div class="postbox">
        <h1>{{title}}</h1>
        <ul class="unstyled">
        {% for post in posts %}
            <li><a href="{{post.permalink(lang)}}">[{{post.date.strftime(date_format)}}] {{post.title(lang)}}</a>
        {% endfor %}
        </ul>
        </div>
        <!--End of body content-->
    </section>
    </div></div>        
{% endblock %}
