#!/usr/bin/env python

"""Nikola main script."""

import os
import sys

import nikola

USAGE = "THERE WILL BE HELP HERE SOON"


if __name__ == "__main__":

    try:
        sys.path.append('')
        import conf
        config = conf.__dict__
    except ImportError:
        config = {}

    site = nikola.Nikola(**config)

    def task_render_site():
        return SITE.gen_tasks()

    if len(sys.argv) < 2:
        sys.argv = 'help'
    else:
        cmd_name = sys.argv[1]
    if cmd_name in site.commands:
        site.commands[cmd_name].run(*sys.argv[2:])
    else:
        print USAGE
